<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <dubbo:application name="Amall-dubbo-web"/>
    <!--注册中心的IP地址-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>
    <!--扫描注解包路径，多个包用逗号分隔，不慎package表示扫描当前ApplicationContext中所有的类-->
    <dubbo:annotation package="controller" />

    <!--use dubbo protocol to export service on port 20880-->
    <dubbo:protocol name="dubbo" port="20880"/>

    <dubbo:reference id="userService" check="false" interface="org.amall.dubbo.service.UserService"/>
</beans>